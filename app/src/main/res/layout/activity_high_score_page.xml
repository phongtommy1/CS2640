<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighScorePage">
    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="cursive"
        android:text="High Score"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnHS4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 card game"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHighScore" />

    <Button
        android:id="@+id/btnHS6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="6 card game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHS4" />

    <Button
        android:id="@+id/btnHS8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="8 card game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHS6" />

    <Button
        android:id="@+id/btnHS10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="10 card game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHS8" />

    <Button
        android:id="@+id/btnHS12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="12 card game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHS10" />

    <Button
        android:id="@+id/btnHS14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 card game"
        app:layout_constraintTop_toBottomOf="@+id/tvHighScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnHS16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 card game"
        app:layout_constraintTop_toBottomOf="@+id/btnHS14"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnHS18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 card game"
        app:layout_constraintTop_toBottomOf="@+id/btnHS16"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnHS20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 card game"
        app:layout_constraintTop_toBottomOf="@+id/btnHS18"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>